{
  "name": "code-audition-service",
  "version": "0.0.3",
  "description": "使用 TypeScript + Egg.js + Mongoose + GraphQL 搭建的开发框架",
  "private": true,
  "egg": {
    "typescript": true,
    "declarations": true
  },
  "scripts": {
    "start": "egg-scripts start --daemon --title=egg-server-code-audition-egg-node",
    "start:serve": "egg-scripts start --title=egg-server-code-audition-egg-node",
    "stop": "egg-scripts stop --title=egg-server-code-audition-egg-node",
    "dev": "egg-bin dev --sticky",
    "debug": "egg-bin debug",
    "test-local": "egg-bin test",
    "test": "npm run lint -- --fix && npm run test-local",
    "cov": "egg-bin cov",
    "tsc": "ets && tsc -p tsconfig.json",
    "ci": "npm run lint",
    "autod": "autod",
    "lint": "tslint --project . -c tslint.json",
    "clean": "ets clean",
    "commit": "git-cz",
    "release": "release-it",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -p"
  },
  "config": {
    "commitizen": {
      "path": "mol-conventional-changelog"
    }
  },
  "dependencies": {
    "apollo-server-koa": "^2.9.3",
    "codecov": "^3.5.0",
    "dataloader": "^1.4.0",
    "egg": "^2.6.1",
    "egg-cors": "^2.2.0",
    "egg-mongoose": "^3.2.0",
    "egg-redis": "^2.4.0",
    "egg-scripts": "^2.6.0",
    "egg-socket.io": "^4.1.6",
    "egg-type-graphql": "^1.7.0",
    "egg-validate": "^2.0.2",
    "mongoose": "^5.6.11",
    "nanoid": "^2.1.0",
    "reflect-metadata": "^0.1.13",
    "socket.io": "^2.2.0",
    "type-graphql": "^0.17.5",
    "typegoose": "^5.9.0"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.40",
    "@types/mongoose": "^5.5.13",
    "@types/nanoid": "^2.0.0",
    "@types/node": "^7.0.12",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.0",
    "autod": "^3.0.1",
    "autod-egg": "^1.1.0",
    "commitizen": "^4.0.3",
    "conventional-changelog": "^3.1.10",
    "conventional-changelog-cli": "^2.0.23",
    "egg-bin": "^4.11.0",
    "egg-ci": "^1.8.0",
    "egg-mock": "^3.16.0",
    "git-cz": "^3.2.1",
    "mol-conventional-changelog": "^1.4.0",
    "release-it": "^12.3.6",
    "tslib": "^1.9.0",
    "tslint": "^5.0.0",
    "tslint-config-egg": "^1.0.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.0.0"
  },
  "engines": {
    "node": ">=8.9.0"
  },
  "ci": {
    "version": "8"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:lentoo/Ts-Egg-Mongoose-GraphQL.git"
  },
  "eslintIgnore": [
    "coverage"
  ],
  "author": "lentoo",
  "license": "MIT"
}
